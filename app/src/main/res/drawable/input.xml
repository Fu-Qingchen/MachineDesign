<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="wrap_content" android:layout_height="wrap_content">
    <item android:state_selected="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="wrap_content" android:shape="rectangle">

            <padding android:bottom="8dp" android:left="8dp" android:right="8dp" android:top="8dp" />

            <corners android:radius="8dp" />

            <stroke android:width="1dp" android:color="@color/blue" />

        </shape>
    </item>
    <item android:state_selected="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="wrap_content" android:shape="rectangle">

            <padding android:bottom="8dp" android:left="8dp" android:right="8dp" android:top="8dp" />

            <corners android:radius="8dp" />

            <stroke android:width="1dp" android:color="@color/light_gray" />

        </shape>
    </item>
</selector>
