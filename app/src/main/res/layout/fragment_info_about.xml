<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".InfoAboutFragment"
    tools:ignore="ContentDescription">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout style="@style/Main_LinearLayout">

            <LinearLayout
                android:id="@+id/language_linearLayout"
                style="@style/Input_LinearLayout"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="112dp"
                    android:layout_height="112dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="16dp"
                    android:src="@drawable/web_hi_res_512_round" />

                <TextView
                    android:id="@+id/language_textView"
                    style="@style/info_textView_button"
                    android:text="@string/about_intro" />

            </LinearLayout>

            <LinearLayout
                style="@style/Input_LinearLayout"
                android:orientation="vertical">

                <TextView
                    style="@style/info_textView_top"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/about_Contact_Feedback" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/contact_Intro"
                    android:textSize="14sp" />

                <LinearLayout
                    android:id="@+id/contact_Rate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:orientation="horizontal"
                    android:padding="8dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="0"
                        android:src="@drawable/baseline_stars_24" />

                    <TextView
                        style="@style/info_textView_top"
                        android:layout_marginStart="16dp"
                        android:layout_weight="1"
                        android:text="@string/contact_Rate"
                        android:textSize="18sp" />

                    <ImageView
                        style="@style/info_ImageView_Right"
                        android:layout_weight="0" />
                </LinearLayout>

                <View style="@style/info_View" />

                <LinearLayout
                    android:id="@+id/contact_Contact"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:orientation="horizontal"
                    android:padding="8dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="0"
                        android:src="@drawable/ic_4975848bga0862c4249ba690_jpg" />

                    <TextView
                        style="@style/info_textView_top"
                        android:layout_marginStart="16dp"
                        android:layout_weight="1"
                        android:text="@string/contact_Contact"
                        android:textSize="18sp" />

                    <ImageView
                        style="@style/info_ImageView_Right"
                        android:layout_weight="0" />
                </LinearLayout>

                <View style="@style/info_View" />

                <LinearLayout
                    android:id="@+id/contact_Feedback"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:orientation="horizontal"
                    android:padding="8dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="0"
                        android:src="@drawable/baseline_email_24" />

                    <TextView
                        style="@style/info_textView_top"
                        android:layout_marginStart="16dp"
                        android:layout_weight="1"
                        android:text="@string/contact_Feedback"
                        android:textSize="18sp" />

                    <ImageView
                        style="@style/info_ImageView_Right"
                        android:layout_weight="0" />
                </LinearLayout>

                <View style="@style/info_View" />

                <LinearLayout
                    android:id="@+id/contact_My_Website"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:layout_marginBottom="0dp"
                    android:orientation="horizontal"
                    android:padding="8dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="0"
                        android:src="@drawable/baseline_web_24" />

                    <TextView
                        style="@style/info_textView_top"
                        android:layout_marginStart="16dp"
                        android:layout_weight="1"
                        android:text="@string/contact_My_Website"
                        android:textSize="18sp" />

                    <ImageView
                        style="@style/info_ImageView_Right"
                        android:layout_weight="0" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                style="@style/Input_LinearLayout"
                android:orientation="vertical"
                android:paddingBottom="0dp">

                <TextView
                    style="@style/info_textView_top"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/about_Development_Related" />

                <LinearLayout
                    android:id="@+id/development_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:orientation="horizontal"
                    android:padding="8dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="0"
                        android:src="@drawable/baseline_link_24" />

                    <TextView
                        style="@style/info_textView_top"
                        android:layout_marginStart="16dp"
                        android:layout_weight="1"
                        android:text="@string/development_code"
                        android:textSize="18sp" />

                    <ImageView
                        style="@style/info_ImageView_Right"
                        android:layout_weight="0" />
                </LinearLayout>

                <View style="@style/info_View" />

                <LinearLayout
                    android:id="@+id/development_Components"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:layout_marginBottom="0dp"
                    android:orientation="horizontal"
                    android:padding="8dp"
                    android:paddingBottom="0dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="0"
                        android:src="@drawable/round_copyright_24" />

                    <TextView
                        style="@style/info_textView_top"
                        android:layout_marginStart="16dp"
                        android:layout_weight="1"
                        android:text="@string/development_Components"
                        android:textSize="18sp" />

                    <ImageView
                        style="@style/info_ImageView_Right"
                        android:layout_weight="0" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                style="@style/Input_LinearLayout"
                android:orientation="vertical">

                <TextView
                    style="@style/info_textView_top"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/about_State" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/state_main"
                    android:textSize="14sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/copyright"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="8dp"
                android:text="@string/copyright"
                android:textSize="16sp"/>
        </LinearLayout>
    </ScrollView>
</FrameLayout>
