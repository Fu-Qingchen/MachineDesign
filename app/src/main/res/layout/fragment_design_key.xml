<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DesignKeyFragment">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout style="@style/Main_LinearLayout">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:text="@string/key_type"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/key_A"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:background="@drawable/share"
                    android:text="@string/key_A" />

                <Button
                    android:id="@+id/key_B"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:background="@drawable/share"
                    android:text="@string/key_B" />

                <Button
                    android:id="@+id/key_C"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:background="@drawable/share"
                    android:text="@string/key_C" />
            </LinearLayout>

            <LinearLayout
                style="@style/Input_LinearLayout"
                android:orientation="vertical">

                <LinearLayout
                    style="@style/Normal"
                    android:baselineAligned="false"
                    android:orientation="horizontal">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <AutoCompleteTextView
                            android:id="@+id/key_d"
                            style="@style/Normal"
                            android:hint="@string/key_d"
                            android:imeOptions="actionNext"
                            android:inputType="number|numberDecimal|numberSigned"
                            android:textSize="16sp" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <AutoCompleteTextView
                            android:id="@+id/key_l"
                            style="@style/Normal"
                            android:hint="@string/key_l"
                            android:imeOptions="actionDone"
                            android:inputType="number|numberDecimal|numberSigned"
                            android:textSize="16sp" />
                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>
            </LinearLayout>


            <android.support.v7.widget.CardView style="@style/Output_CardView">

                <LinearLayout
                    style="@style/Normal"
                    android:layout_margin="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/key_bh"
                        style="@style/Output_TextView"
                        android:text="@string/key_bh" />

                    <LinearLayout
                        style="@style/Normal"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/key_L"
                            style="@style/Output_TextView"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:text="@string/key_L" />

                        <TextView
                            android:id="@+id/key_P"
                            style="@style/Output_TextView"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/key_P" />
                    </LinearLayout>

                    <LinearLayout
                        style="@style/Normal"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/key_t"
                            style="@style/Output_TextView"
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:text="@string/key_t" />

                        <TextView
                            android:id="@+id/key_t_top"
                            style="@style/Output_TextView"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/design_top" />

                        <TextView
                            android:id="@+id/key_t_button"
                            style="@style/Output_TextView"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/design_button" />
                    </LinearLayout>

                    <LinearLayout
                        style="@style/Normal"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/key_t1"
                            style="@style/Output_TextView"
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:text="@string/key_t1" />

                        <TextView
                            android:id="@+id/key_t1_top"
                            style="@style/Output_TextView"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/design_top" />

                        <TextView
                            android:id="@+id/key_t1_button"
                            style="@style/Output_TextView"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/design_button" />
                    </LinearLayout>

                    <LinearLayout
                        style="@style/Normal"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/key_r_min"
                            style="@style/Output_TextView"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:text="@string/key_r_min" />

                        <TextView
                            android:id="@+id/key_r_max"
                            style="@style/Output_TextView"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/key_r_max" />
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:text="@string/key_style"
                    android:textSize="16sp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:background="@drawable/share"
                    android:text="@string/key_soft" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:background="@drawable/share"
                    android:text="@string/key_normal" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:background="@drawable/share"
                    android:text="@string/key_hard" />
            </LinearLayout>

            <android.support.v7.widget.CardView style="@style/Output_CardView">

                <LinearLayout
                    style="@style/Normal"
                    android:layout_margin="16dp"
                    android:orientation="vertical">


                    <LinearLayout
                        style="@style/Normal"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/key_b"
                            style="@style/Output_TextView"
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:text="@string/key_b" />

                        <TextView
                            android:id="@+id/key_b_top"
                            style="@style/Output_TextView"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/design_top" />

                        <TextView
                            android:id="@+id/key_b_button"
                            style="@style/Output_TextView"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/design_button" />
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_gravity="center_horizontal"
                android:scaleType="fitCenter"
                android:src="@drawable/pic_key" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/key_GB"
                android:layout_gravity="center_horizontal"/>
            <LinearLayout
                style="@style/Normal"
                android:layout_marginTop="8dp"
                android:baselineAligned="false"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="36dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/delete"
                        style="@style/share_LinearLayout">

                        <ImageView
                            style="@style/share_ImageView"
                            android:src="@drawable/ic_shortcut_delete" />

                        <TextView
                            style="@style/share_TextView"
                            android:text="@string/app_delete" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/share"
                        style="@style/share_LinearLayout">

                        <ImageView
                            style="@style/share_ImageView"
                            android:src="@drawable/ic_shortcut_share" />

                        <TextView
                            style="@style/share_TextView"
                            android:text="@string/app_share" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</FrameLayout>