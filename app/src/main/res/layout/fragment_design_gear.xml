                    style="@style/Output_TextView"
                    android:layout_margin="16dp"
                    android:text="@string/gear_d10" />

            </android.support.v7.widget.CardView>

            <LinearLayout
                style="@style/Input_LinearLayout"
                android:orientation="vertical">

                <LinearLayout
                    style="@style/Normal"
                    android:baselineAligned="false"
                    android:orientation="horizontal">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <AutoCompleteTextView
                            android:id="@+id/gear_z1"
                            style="@style/Normal"
                            android:hint="@string/gear_z1"
                            android:imeOptions="actionNext"
                            android:inputType="number|numberDecimal|numberSigned"
                            android:textSize="16sp" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <AutoCompleteTextView
                            android:id="@+id/gear_z2"
                            style="@style/Normal"
                            android:hint="@string/gear_z2"
                            android:imeOptions="actionDone"
                            android:inputType="number|numberDecimal|numberSigned"
                            android:textSize="16sp" />
                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>
            </LinearLayout>

            <android.support.v7.widget.CardView style="@style/Output_CardView">

                <LinearLayout
                    style="@style/Normal"
                    android:layout_margin="16dp"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/gear_mn"
                        style="@style/Output_TextView"
                        android:text="@string/gear_mn" />

                    <TextView
                        android:id="@+id/gear_a"
                        style="@style/Output_TextView"
                        android:text="@string/gear_a" />


                    <TextView
                        android:id="@+id/vbelt_delta"
                        style="@style/Output_TextView"
                        android:text="@string/gear_beta" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <LinearLayout
                style="@style/Input_LinearLayout"
                android:orientation="vertical">

                <LinearLayout
                    style="@style/Normal"
                    android:baselineAligned="false"
                    android:orientation="horizontal">

                    <android.support.design.widget.TextInputLayout
